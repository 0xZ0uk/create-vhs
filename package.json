{
	"name": "vhs",
	"description": "A monorepo template using Vite, Hono and Solid.",
	"version": "0.0.1",
	"author": "Pedro Santana",
	"license": "MIT",
	"keywords": ["vite", "hono", "solid"],
	"homepage": "https://github.com/0xZ0uk/vhs",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "bun run --filter '!@vhs' build",
		"build:client": "bun run --filter 'client' build",
		"build:server": "bun run --filter 'server' build",
		"dev": "bun run --filter '!@vhs' dev",
		"dev:client": "bun run --filter 'client' dev",
		"dev:server": "bun run --filter 'server' dev"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
