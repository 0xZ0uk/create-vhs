{
  "name": "create-vhs",
  "description": "Create a VHS monorepo with one command.",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "create-vhs": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/index.js",
    "dev": "bun --watch src/cli.ts",
    "dev:direct": "bun src/cli.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^12.6.3",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "degit": "^2.8.4",
    "execa": "^8.0.1",
    "glob": "^11.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/degit": "^2.8.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "typescript": "^5"
  },
  "keywords": [
    "bun",
    "monorepo",
    "cli",
    "template",
    "vhs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0xZ0uk/create-vhs/packages/create-vhs"
  }
}
